declare -a opts
local curcontext=$curcontext state line ret=1
declare -A opt_args

_arguments -C $opts \
  $args && ret=0

case $state in
  *)
    _files && ret=0
    ;;
esac

return $ret


#  vim: set ft=zsh sw=2 tw=0 fdm=manual et :
